{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "30px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;base64,",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "Previous",
                                "data": {
                                    "id": "Previous"
                                }
                            },
                            "size": "medium"
                        }
                    ],
                    "verticalContentAlignment": "Top",
                    "style": "default"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${description}",
                            "size": "Medium",
                            "weight": "Bolder",
                            "horizontalAlignment": "Center"
                        },
                        {
                            "type": "Image",
                            "url": "${chartURL}",
                            "horizontalAlignment": "Center",
                            "size": "Small"
                        }
                    ]
                }                
            ]
        }
    ]
}